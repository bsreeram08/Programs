<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#FFF"
    android:gravity="center"
    android:weightSum="17"
    android:orientation="vertical">

    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <TextView
        android:layout_weight="1"
        android:id="@+id/Maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000"
        android:gravity="center"
        android:text="New Game!" />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="#222"
        android:gravity="center"
        android:text="Guess the number i am thinking from 1 to 20!" />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/value"
        android:inputType="number"
        android:gravity="center"
        android:ems="15"
        android:hint="Your Number Here."
        />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:onClick="NumberCheck"
            android:text="Submit" />
        <View
            android:layout_width="20dp"
            android:layout_height="0dp"

            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="1"
                android:background="#000"
                android:ems="5"
                android:gravity="center"
                android:text="Start to Guess"
                android:textColor="#FFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hinthigh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="#000"
                android:ems="5"
                android:gravity="center"
                android:text="Try Higher"
                android:textColor="#FFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hintlow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="#000"
                android:ems="5"
                android:gravity="center"
                android:text="Try Lower"
                android:textColor="#FFF"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <LinearLayout
        android:weightSum="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The "
            android:gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:id="@+id/reveal"
            android:gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" of Tries You Took are below"
            android:gravity="center"
            android:textSize="15sp"
            />

    </LinearLayout>
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#000"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_marginHorizontal="60dp"
        android:text="0"
        android:id="@+id/tries"
        android:textColor="#0F0"
        />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
    <View
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        />
</android.support.v7.widget.LinearLayoutCompat>